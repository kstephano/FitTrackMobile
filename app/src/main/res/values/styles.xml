<resources>

    <!-- Base application theme. -->
    <style name="Theme.MaterialComponents.Light." parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for TextInputLayouts. -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>

    <!-- Theme for activity_register date picker dialog. -->
    <style name="MyDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for activity_register date picker. -->
    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <!-- -->
    <style name="NavigationViewStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:listPreferredItemHeightSmall">25dp</item>
        <item name="android:listPreferredItemPaddingLeft">12dp</item>
        <item name="listPreferredItemPaddingLeft">15dp</item>
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">12dp</item>
        <item name="android:listDivider">@color/colorNavText</item>
        <item name="android:textColorSecondary">@color/colorNavText</item>
    </style>
</resources>
