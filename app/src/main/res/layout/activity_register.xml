<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_CL"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/register_user_profilepic_IV"
        android:layout_width="96dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:onClick="profileIVonClick"
        android:src="@drawable/profilepic"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_toolbar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <EditText
        android:id="@+id/register_username_ET"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:autofillHints=".AUTOFILL_HINT_USERNAME"
        android:drawableStart="@drawable/ic_user_drawable"
        android:drawablePadding="8dp"
        android:ellipsize="start"
        android:gravity="center|start"
        android:hint="@string/username_hint"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_user_profilepic_IV" />

    <EditText
        android:id="@+id/register_email_ET"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="6dp"
        android:drawableStart="@drawable/ic_mail_drawable"
        android:drawablePadding="8dp"
        android:ellipsize="start"
        android:gravity="center|start"
        android:hint="@string/email_hint"
        android:inputType='textEmailAddress'
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username_ET" />

    <EditText
        android:id="@+id/register_firstname_ET"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="6dp"
        android:autofillHints="@string/autofill_firstname"
        android:drawableStart="@drawable/ic_firstname_drawable"
        android:drawablePadding="8dp"
        android:ellipsize="start"
        android:gravity="center|start"
        android:hint="@string/firstname_hint"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email_ET" />

    <EditText
        android:id="@+id/register_lastname_ET"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="6dp"
        android:autofillHints="@string/autofill_lastname"
        android:drawableStart="@drawable/ic_lastname_drawable"
        android:drawablePadding="8dp"
        android:ellipsize="start"
        android:gravity="center|start"
        android:hint="@string/lastname_hint"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_firstname_ET" />

    <TextView
        android:id="@+id/register_dob_TV"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="6dp"
        android:drawableStart="@drawable/ic_dob_drawable"
        android:drawablePadding="8dp"
        android:ellipsize="start"
        android:gravity="center|start"
        android:hint="@string/dob_hint"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_lastname_ET" />

    <EditText
        android:id="@+id/register_password_ET"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="6dp"
        android:autofillHints=".AUTOFILL_HINT_PASSWORD"
        android:drawableStart="@drawable/ic_padlock_drawable"
        android:drawablePadding="8dp"
        android:ellipsize="start"
        android:gravity="center|start"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_dob_TV" />

    <EditText
        android:id="@+id/register_reenter_ET"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="6dp"
        android:drawableStart="@drawable/ic_refreshpadlock_drawable"
        android:drawablePadding="8dp"
        android:ellipsize="start"
        android:gravity="center|start"
        android:hint="@string/reenter_password_hint"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password_ET" />

    <RadioGroup
        android:id="@+id/register_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_reenter_ET">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/register_male_RB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:text="@string/male" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/register_female_RB"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="116dp"
            android:text="@string/female" />
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_button"
        android:layout_width="131dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:text="@string/register"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>