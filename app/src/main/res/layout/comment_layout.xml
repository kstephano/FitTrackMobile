<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="@color/colorPrimaryLight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smoothborders_white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profilepic"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:id="@+id/comment_layout_profilePicIV"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/comment_layout_userNameTV"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@id/comment_layout_profilePicIV"
            android:textColor="@color/colorPrimaryText"
            android:textSize="12sp"
            android:text="@string/default_firstname_tv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:text="@string/default_date_tv"
            android:id="@+id/comment_layout_currentDateTimeTV"
            android:layout_toEndOf="@+id/comment_layout_profilePicIV"
            android:textColor="@color/colorPrimaryText"
            android:textSize="10sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_below="@+id/comment_layout_userNameTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment_layout_commentTV"
            android:layout_below="@id/comment_layout_profilePicIV"
            android:text="@string/default_comment_tv"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

</RelativeLayout>