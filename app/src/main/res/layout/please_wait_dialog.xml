<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp" android:layout_height="80dp"
    android:background="@drawable/wait_dialog_bg"
    android:layout_gravity="center">

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/pleaseWait_progressBar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorAccent"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/please_wait_tv"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/pleaseWait_progressBar"
        android:layout_marginTop="30dp"/>
</RelativeLayout>