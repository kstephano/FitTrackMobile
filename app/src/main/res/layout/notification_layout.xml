<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/smoothborders_white">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_heart"
        android:id="@+id/notification_layout_actionIconIV"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profilepic"
        android:id="@+id/notification_layout_profilePicIV"
        android:scaleType="centerCrop"
        android:layout_toEndOf="@id/notification_layout_actionIconIV"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_layout_userEmailTV"
        android:layout_toEndOf="@+id/notification_layout_profilePicIV"
        android:text="@string/default_email_tv"
        android:textStyle="italic|bold"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="7dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_layout_dateTV"
        android:text="@string/default_date_tv"
        android:textColor="@color/colorBlack"
        android:textSize="10sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification_layout_actionTV"
        android:layout_below="@id/notification_layout_userEmailTV"
        android:layout_toEndOf="@id/notification_layout_profilePicIV"
        android:layout_marginStart="5dp"
        android:text="@string/default_notification_action_tv"
        android:textColor="@color/colorBlack"/>

</RelativeLayout>